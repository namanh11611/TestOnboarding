<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutOnboardNews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/coccoc_onboard_news_scene">

    <TextView
        android:id="@+id/textNewsVideoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:layout_marginBottom="34dp"
        android:text="Doc tin duoc goi y boi AI dua tren chu de ban thich"
        android:textColor="#444545"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textNewsVideoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:layout_marginBottom="16dp"
        android:text="Doc tin tren tab moi"
        android:textColor="#2A2B2B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textNewsVideoDescription"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/layoutNewsWrapper"
        android:layout_width="360dp"
        android:layout_height="360dp"
        app:layout_constraintBottom_toTopOf="@id/textNewsVideoTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgNews3"
        android:layout_width="200dp"
        android:layout_height="177dp"
        android:src="@drawable/coccoc_onboard_news_3"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgNews2"
        android:layout_width="166dp"
        android:layout_height="171dp"
        android:src="@drawable/coccoc_onboard_news_2"
        app:layout_constraintBottom_toBottomOf="@id/layoutNewsWrapper"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutNewsWrapper" />

    <ImageView
        android:id="@+id/imgNews1"
        android:layout_width="166dp"
        android:layout_height="128dp"
        android:src="@drawable/coccoc_onboard_news_1"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutNewsWrapper" />

</androidx.constraintlayout.motion.widget.MotionLayout>